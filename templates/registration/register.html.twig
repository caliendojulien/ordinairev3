{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/registration/register.css') }}">
{% endblock %}

{% block title %}Ajout utilisateur{% endblock %}

{% block body %}
    <div class="contenu">
        <h1>Ajouter un utilisateur</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname, {
            label: 'Prénom : '
        }) }}
        {{ form_row(registrationForm.name, {
            label: 'Nom : '
        }) }}
        {{ form_row(registrationForm.grade, {
            label: 'Grade : '
        }) }}
        {{ form_row(registrationForm.card, {
            label: 'Numéro de carte ordinaire : '
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe : '
        }) }}
        {{ form_row(registrationForm.section, {
            label: 'Section : '
        }) }}

        <button type="submit" class="btn">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
