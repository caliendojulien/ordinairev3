{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/stagiaire/index.css') }}">
{% endblock %}

{% block title %}{{ user.grade }} {{ user.name }} {{ user.firstName }}{% endblock %}

{% block body %}
    <div id="calendrier">
    <p>{{ user.grade }} {{ user.name }} {{ user.firstName }}</p>
    {% for c in calendar %}
        <a href="{{ path('sectionHead_detaildecompte', {'id': user.id,'month':  c | date('m') , 'year': c | date('Y')}) }}"><p>{{ c | format_datetime(pattern='MMMM YYYY', locale='fr') }}</p></a>
    {% endfor %}
    </div>
{% endblock %}


